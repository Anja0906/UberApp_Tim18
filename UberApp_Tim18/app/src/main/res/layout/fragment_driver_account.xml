<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".fragments.DriverAccount">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_data"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit"
                    android:layout_marginTop="20dp"
                    android:visibility="visible">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/edit_data"
                        android:background="@drawable/round_image_view"
                        android:padding="10dp"
                        android:src="@drawable/edit"
                        android:layout_marginStart="20dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/confirm_edit"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:visibility="gone"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/confirm_edit_data"
                        android:background="@drawable/round_image_view"
                        android:padding="10dp"
                        android:src="@drawable/confirm"
                        />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/cancel_edit_data"
                        android:background="@drawable/round_red"
                        android:padding="10dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/cancel"
                        />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:id="@+id/name_layout"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="1"
                        android:drawableLeft="@drawable/ic_person"
                        android:fontFamily="sans-serif-medium"
                        android:drawablePadding="10dp"
                        android:text="@string/name"
                        android:textColor="@color/edit_text"
                        android:textSize="20sp"
                        android:background="@drawable/textview_border"
                        />


                    <EditText
                        android:id="@+id/name_edit_text"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/edit_text"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="text"
                        android:background="@drawable/textview_border"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:id="@+id/surname_layout"
                    android:layout_below="@+id/name_layout"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/surname_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="1"
                        android:drawableLeft="@drawable/ic_person"
                        android:fontFamily="sans-serif-medium"
                        android:drawablePadding="10dp"
                        android:text="@string/surname"
                        android:textColor="@color/edit_text"
                        android:textSize="20sp"
                        android:background="@drawable/textview_border"
                        />


                    <EditText
                        android:id="@+id/surname_edit_text"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/edit_text"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="text"
                        android:background="@drawable/textview_border"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:id="@+id/phone_layout"
                    android:layout_below="@+id/surname_layout"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/phone_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="1"
                        android:drawableLeft="@drawable/ic_phone"
                        android:fontFamily="sans-serif-medium"
                        android:drawablePadding="10dp"
                        android:text="@string/phone"
                        android:textColor="@color/edit_text"
                        android:textSize="20sp"
                        android:background="@drawable/textview_border"/>

                    <EditText
                        android:id="@+id/phone_edit_text"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/edit_text"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="20sp"
                        android:inputType="phone"
                        android:background="@drawable/textview_border"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:id="@+id/email_layout"
                    android:layout_below="@+id/phone_layout"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/email_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="1"
                        android:drawableLeft="@drawable/ic_monkey_a"
                        android:drawablePadding="10dp"
                        android:fontFamily="sans-serif-medium"

                        android:text="@string/email"
                        android:textColor="@color/edit_text"
                        android:textSize="20sp"
                        android:background="@drawable/textview_border"/>

                    <EditText
                        android:id="@+id/email_edit_text"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:fontFamily="sans-serif-medium"

                        android:textColor="@color/edit_text"
                        android:textSize="20sp"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/textview_border"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:id="@+id/address_layout"
                    android:layout_below="@+id/email_layout"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/address_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="1"
                        android:drawableLeft="@drawable/ic_home"
                        android:drawablePadding="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/address"
                        android:textColor="@color/edit_text"
                        android:textSize="20sp"
                        android:background="@drawable/textview_border"/>

                    <EditText
                        android:id="@+id/address_edit_text"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/edit_text"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="20sp"
                        android:inputType="textPostalAddress"
                        android:background="@drawable/textview_border"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</FrameLayout>