<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    tools:context=".fragments.FavoriteRides">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttons"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit"
                android:layout_marginTop="20dp"
                android:visibility="visible">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/add_favorite_ride"
                    android:background="@drawable/round_image_view"
                    android:padding="10dp"
                    android:src="@drawable/plus"
                    android:layout_marginStart="20dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/confirm_edit"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/confirm_edit_data"
                    android:background="@drawable/round_image_view"
                    android:padding="10dp"
                    android:src="@drawable/confirm"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/cancel_edit_data"
                    android:background="@drawable/round_red"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/cancel"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/form"
            android:layout_below="@+id/buttons"
            android:padding="20dp"
            android:visibility="gone"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/textview_border"
                android:fontFamily="sans-serif-medium"
                android:inputType="text"
                android:hint="@string/from"
                android:textAlignment="center"
                android:textColor="@color/edit_text"
                android:layout_margin="10dp"
                android:textColorHint="@color/edit_text"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/from"
                android:layout_weight="4"
                android:background="@drawable/textview_border"
                android:fontFamily="sans-serif-medium"
                android:inputType="text"
                android:hint="@string/to"
                android:textAlignment="center"
                android:textColor="@color/edit_text"
                android:layout_margin="10dp"
                android:textColorHint="@color/edit_text"
                android:textSize="20sp" />

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/to"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:background="@drawable/time_picker"
                android:textColorHint="@color/black"
                android:timePickerMode="spinner" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@id/timePicker"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_image1"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/radio_button_selector"
                    android:button="@drawable/van"
                    android:padding="10dp" />

                <RadioButton
                    android:id="@+id/radio_image2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/radio_button_selector"
                    android:button="@drawable/car"
                    android:padding="10dp" />

                <RadioButton
                    android:id="@+id/radio_image3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/radio_button_selector"
                    android:button="@drawable/limousine"
                    android:padding="10dp" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/booleans"
                android:layout_below="@+id/radio_group"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/baby_transport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/baby_transport_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/baby_transport"
                        android:textColor="#EBE8D7"
                        android:textSize="20sp"
                        android:alpha="1"
                        />

                    <ToggleButton
                        android:id="@+id/baby_transport_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/toggle_button_color"
                        android:text="@string/toggle_text"
                        android:textOff="@string/no"
                        android:textOn="@string/yes" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/pet_transport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:id="@+id/pet_transport_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pet_transport"
                        android:layout_alignParentStart="true"
                        android:textColor="#EBE8D7"
                        android:textSize="20sp"
                        android:alpha="1"/>

                    <ToggleButton
                        android:id="@+id/pet_transport_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/toggle_button_color"
                        android:text="@string/toggle_text"
                        android:textOff="@string/no"
                        android:textOn="@string/yes"
                        />
                </RelativeLayout>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/booleans"
                android:background="@drawable/button_shape"
                android:text="@string/add"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_layout"
            android:layout_below="@+id/buttons"
            android:padding="20dp"
            android:visibility="visible">
            <ListView
                android:id="@+id/list_view"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>