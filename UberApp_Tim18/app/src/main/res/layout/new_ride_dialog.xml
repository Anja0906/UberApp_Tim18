<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <TextView
            android:id="@+id/acc_info_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="New ride:"
            android:textColor="@color/edit_text"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:orientation="horizontal"
            android:id="@+id/linear_layout1"
            android:layout_below="@id/acc_info_txt">

            <TextView
                android:id="@+id/name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="1"
                android:background="@drawable/textview_border"
                android:drawableLeft="@drawable/ic_person"
                
                android:fontFamily="sans-serif-medium"
                android:text="@string/passengers"
                android:textColor="@color/edit_text"
                android:textSize="17sp" />


            <EditText
                android:id="@+id/name_txt_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/textview_border"
                android:fontFamily="sans-serif-medium"
                android:inputType="text"
                android:textAlignment="viewEnd"
                android:textColor="@color/edit_text"
                android:textSize="17sp" />
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:alpha="0.5"
            android:background="@color/background"
            android:fontFamily="sans-serif-medium"
            android:layout_below="@+id/linear_layout1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:orientation="horizontal"
            android:id="@+id/linear_layout2"
            android:layout_below="@+id/appCompatImageView4">

            <TextView
                android:id="@+id/phone_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="1"
                android:background="@drawable/textview_border"
                android:drawableLeft="@drawable/ic_clock"
                android:fontFamily="sans-serif-medium"
                android:text="Estimated time"
                android:textColor="@color/edit_text"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/phone_txt_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/textview_border"
                android:fontFamily="sans-serif-medium"
                android:inputType="phone"
                android:textAlignment="viewEnd"
                android:textColor="@color/edit_text"
                android:textSize="17sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:alpha="0.5"
            android:background="@color/background"
            android:fontFamily="sans-serif-medium"
            android:layout_below="@+id/linear_layout2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:orientation="horizontal"
            android:layout_below="@id/appCompatImageView3"
            android:id="@+id/linear_layout3">

            <TextView
                android:id="@+id/email_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="1"
                android:background="@drawable/textview_border"
                android:drawableLeft="@drawable/ic_home"
                
                android:fontFamily="sans-serif-medium"
                android:text="@string/departure"
                android:textColor="@color/edit_text"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/email_txt_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/textview_border"
                android:fontFamily="sans-serif-medium"

                android:inputType="textEmailAddress"
                android:textAlignment="viewEnd"
                android:textColor="@color/edit_text"
                android:textSize="17sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView2"
            android:layout_below="@id/linear_layout3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:alpha="0.5"
            android:background="@color/background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:orientation="horizontal"
            android:layout_below="@id/appCompatImageView2"
            android:id="@+id/linear_layout4">

            <TextView
                android:id="@+id/address_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="1"
                android:background="@drawable/textview_border"
                android:drawableLeft="@drawable/ic_home"
                
                android:fontFamily="sans-serif-medium"
                android:text="@string/destination"
                android:textColor="@color/edit_text"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/address_txt_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/textview_border"
                android:fontFamily="sans-serif-medium"
                android:inputType="textPostalAddress"
                android:textAlignment="viewEnd"
                android:textColor="@color/edit_text"
                android:textSize="17sp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:alpha="0.5"
            android:background="@color/background"
            android:id="@+id/appCompatImageView6"
            android:layout_below="@+id/linear_layout4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:orientation="horizontal"
            android:layout_below="@+id/appCompatImageView6">

            <TextView
                android:id="@+id/pass_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="1"
                android:background="@drawable/textview_border"
                android:drawableLeft="@drawable/ic_dollar_sign"
                
                android:text="@string/price"
                android:textColor="@color/edit_text"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/pass_txt_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@drawable/textview_border"
                android:fontFamily="sans-serif-medium"
                android:inputType="text"
                android:textAlignment="viewEnd"
                android:textColor="@color/edit_text"
                android:textSize="17sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:alpha="0.5"
            android:background="@color/background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/reject_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_toRightOf="@+id/cancel_button"

                android:layout_weight="1"
                android:alpha="1"
                android:background="@drawable/button_cancel"
                android:text="@string/reject"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/confirm_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:alpha="1"
                android:background="@drawable/button_shape"
                android:text="@string/confirm"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>